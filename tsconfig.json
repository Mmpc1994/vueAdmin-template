{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "pretty": true,
    "target": "es5",
    "strict": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "lib": ["es2015", "dom"],
  },
  "include": [
    "./src/**/*",
    "./src/*"
  ]
}